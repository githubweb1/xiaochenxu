/* pages/globonus/index/index.wxss */
page{
  background: #f3f3f3
}
.xj-index-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}
.opacity{
  opacity: 0
}
.xj-index-header image {
  border-radius: 50%;
  height: 80rpx;
  width: 80rpx;
}

.xj-index-header text {
  width: 400rpx;
}

.xj-index-header view {
  color: #f55;
  font-size: 26rpx;
}

.xj-index-content view {
  font-size:26rpx;
}

.xj-index-content {
  background: #64b3f3;
  color: #fff;
  height:220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.xj-index-content text {
  margin-top: 20rpx;
font-size:97rpx;
}
.xj-index-all-bottom{
  display:flex;
align-items:center;
flex-wrap:wrap;
}
.xj-index-bottom {
  display:flex;
flex-direction:column;
justify-content:center;
align-items:center;
width:33.3%;
height:230rpx;
color: #666;
border-right: 1rpx solid #f5f5f5;
box-sizing: border-box
}

.xj-index-bottom image {
width:64rpx;
height:64rpx;
margin-bottom:10rpx;
}

.xj-bottom-money text {
      color: #feb312;
      margin-top: 10rpx;
}
