/* 协议 */
.view-eno-bg {
  background: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
}
.read{
  background:#fff;
display:flex;
font-size:15px;
width:80%;
z-index:10001;
position:fixed;
height:500rpx;
top:25%;
left:10%;
justify-content:center;
flex-direction:column;
align-items:center;

}
.btn{
width:50%;
display:flex;
justify-content:center;
align-items:center;
position:absolute;
bottom:20rpx;
background:#ff5555;
color:white;
padding:20rpx;
border-radius:35rpx;
}
.bg{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position:fixed;
  top: 0rpx;
  left: 0rpx;
  z-index: 1;
}
.bg-img{
  width:70rpx;
  height: 70rpx;
  position: absolute;
  right: 5%;
  top: 8%; 
}
.bg-view{
  width: 70%;
  height: 55%;
  background: #fff;
  border-radius: 40rpx;
  position: absolute;
  top: 18%;
  left: 15%;
  display: flex;
  flex-direction: column;
}
.bg-title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333;
}
.bg-content{
  width: 90%;
  height: 65%;
  margin:0 auto;
  font-size: 30rpx;
  color: #666;
  overflow: scroll;
  display: flex;
  flex-direction: column;
}
.bg-content-text{
  text-indent:2em;
}
.bg-btn{
  width: 88%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 0.8rem;
  color: #fff;
  border-radius: 15rpx;
  background: #ff5555;
  position: absolute;
  bottom:6%;
  left: 6%;
}
.hide{
  display: none;
}