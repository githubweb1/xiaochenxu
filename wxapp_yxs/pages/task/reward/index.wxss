/* pages/task/reward/index.wxss */
page{
  background: #f3f3f3;
}
.xj-reward-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  border: 1rpx solid #f3f3f3;
  background: #fff;
}

.xj-reward-list-left {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.xj-reward-list-left-top {
  display: flex;
  align-items: center;
}

.xj-text {
  font-size: 32rpx;
  color: #333;
  margin-left: 10rpx;
}

.xj-center-image {
  width: 30rpx;
  height: 30rpx;
}

.xj-reward-center {
  color: #666;
  font-size: 28rpx;
}

.x-reward-bottom {
  color: #999;
  font-size: 28rpx;
}

.xj-reward-list-right {
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.xj-one {
  padding: 5rpx 15rpx;
  font-size: 28rpx;
  border: 1rpx solid #f55;
  color: #f55;
  border-radius: 30rpx;
  text-align: center;
}
