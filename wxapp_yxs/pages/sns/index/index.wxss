/* pages/board/index.wxss */
page{
	    background: #f3f3f3;
}
.oy-board-swiper{
		height:410rpx;
}
.oy-slide-image{
	display: block;
	width:100%;
	height:410rpx;
}

.oy-board-item-box{
	background: #fff;
}
.oy-board-item{
	width: 25%;
	box-sizing: border-box;
	position: relative;
  padding: 20rpx 0;
}
.oy-board-item-img{
	width:88rpx;
	height: 88rpx;
	display: block;
	margin:0 auto;
	border-radius: 50%;
}
.oy-board-item-title{
		text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 8rpx;
		font-size: 26rpx;
    color: #000;
}
.oy-qa-head{
	margin-top:20rpx;
	height:84rpx;
	line-height: 84rpx;
	padding:0 24rpx;
	background: #fff;
}
.oy-qa-head{
	font-size: 30rpx;
}
.oy-qa-head-right{
	color:#999;
}
.oy-qa-head-right:after{
	content: " ";
    display: inline-block;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
    height: 16rpx;
    width: 16rpx;
    border-width: 1px 1px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    position: relative;
    margin-left: 0;
}
@import 'list.wxss';
