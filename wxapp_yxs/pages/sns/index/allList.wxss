/* pages/board/allList.wxss */
@import 'list.wxss';
@import 'footer.wxss';
page{
	    background: #fff;
		height:100%;
}
.oy-allList-main{
	position: absolute;
	top:0;
	left: 0;
	bottom:0;
	right:0;
	box-sizing: border-box;
	/* padding-bottom: 100rpx; */
}
.oy-allList-main-left{
		width:210rpx;
		height:100%;
    background: #f8f8f8;
}
::-webkit-scrollbar{
  width:0;
  height: 0;
  display: none;
}
.oy-allList-nav{
		line-height: 80rpx;
    font-size: 26rpx;
    text-align: center;
    color: #000;
    padding: 0 8rpx;
    height:80rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    position: relative;
}
.oy-allList-nav.oy-active{
	color:#ff5555;
	background: #fff;
}
.oy-allList-nav.oy-active:before{
		width: 0;
    height: 100%;
    content: " ";
    position: absolute;
    top: 0;
    left: 0;
    border-left: 8rpx solid #ff5555;
    z-index: 2;

}
.oy-allList-main-right{
	height:100%;
}
::-webkit-scrollbar{
  width:0;
  height: 0;
  display: none;
}
.oy-allList-input{
	margin:0 10rpx;
	border-radius: 6rpx;
	height:56rpx;
	background-color: #fff;
  border: 1px solid #b4b4b4;
}
.oy-h20{
	height: 20rpx;
}
.oy-search{
	width:60rpx;
	height:100%;
}
.oy-search image{
	width:36rpx;
	height: 36rpx;
	display: block;
}
.oy-my-input{
	
	height:100%;
	font-size:28rpx;
}
.oy-times{
	width:100%;
	height:100%;
}
.oy-times image{
	width:36rpx;
	height: 36rpx;
	display: block;
}
.oy-times-box{
	width:60rpx;
	height:100%;
}
.oy-footer-box{
	position: relative;
	
}
.oy-footer-box .oy-footer-bar{
	position: absolute;
}

.oy-qa-head-right{
	color:#999;
}
.oy-qa-head-right:after{
		content: " ";
    display: inline-block;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
    height: 16rpx;
    width: 16rpx;
    border-width: 1px 1px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    position: relative;
    margin-left: 0;
}
.oy-row-title{
	font-size: 26rpx;
}
