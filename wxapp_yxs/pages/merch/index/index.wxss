/* pages/merch/list/index.wxss */

page {
  background: #f3f3f3;
}
.view-swiper image{
  width: 100%;
  height: 100%
}
.view-input {
  background: #fff;
  border-radius: 10rpx;
  padding-left: 60rpx;
  font-size: 30rpx;
  height: 60rpx;
}

.view-input-image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 33rpx;
  left: 35rpx;
}

.headerimage {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(-180deg);
}

.xj-all-cate {
  top: 0;
  font-size: 30rpx;
  border-bottom: 1px solid #f5f5f5;
  padding: 15rpx 20rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
}

/* 推荐分类 */

.xj-cate-all-content {
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  font-size: 30rpx;
}

.xj-cata-content {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 25%;
}

.xj-cata-content view {
  margin-top: 10rpx;
  height: 40rpx;
  overflow: hidden;
}

/* 推荐商家 */

.xj-cate-all-shopcontent {
  background: #fff;
  font-size: 30rpx;
}

.xj-cata-shopcontent {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f8f8f8;
}

.xj-cata-center {
  overflow: hidden;
  width: 500rpx;
}
