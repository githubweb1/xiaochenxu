/* 点击下拉 */

.view-lie {
  height: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
  font-size: 30rpx;
  color: #555;
  background-color: #fff;
}

.view-lie-style {
  border-right: 1rpx solid #ccc;
  width: 33.3%;
  text-align: center;
  position: relative;
}

.view-lie-style-icon, .view-lie-area-icon, .view-lie-sort-icon {
  color: green;
  display: inline-block;
  transform: rotate(225deg);
  transition: all 0.3s linear;
  margin-bottom: 8rpx;
  margin-left: 10rpx;
}

.rightRotate {
  transform: rotate(45deg) translateY(8rpx) translateX(5rpx);
}

.active {
  color: #1e90ff;
}

.view-lie-area {
  border-right: 1rpx solid #ccc;
  width: 33.3%;
  text-align: center;
}

.goBack {
  height: 15rpx;
  width: 15rpx;
  border-top: 1px solid #999;
  border-left: 1px solid #999;
  display: inline-block;
}

.view-lie-sort {
  width: 33.3%;
  text-align: center;
}

/* 导航隐藏 */

.view-style-context view, .view-area-context view, .view-sort-context view {
  height: 50rpx;
  line-height: 50rpx;
  padding: 10rpx;
  font-size: 25rpx;
  background-color: #fff;
  color: #555;
}

.view-style-context view text, .view-area-context view text,
.view-sort-context view text {
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.view-style-context, .view-sort-context, .view-area-context {
  display: none;
  background-color: #f5f5f5;
  position: absolute;
  width: 100%;
  transition: all 1s linear;
  z-index: 1000;
}

.contectBlocl {
  display: block;
}

.view-hide-bg {
  width: 100%;
  height: 100%;
  background: #000;
  position: fixed;
  z-index: 900;
  opacity: 0.2;
  top:200rpx;
}
