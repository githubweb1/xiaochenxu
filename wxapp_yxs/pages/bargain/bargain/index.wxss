/* pages/bargain/bargain/index.wxss */
@import "/utils/wxParse/wxParse.wxss";

page {
  background: #f3f3f3;
}

.xj-header {
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  font-size: 30rpx;
  align-items: center;
  margin-bottom: 20rpx;
}

.xj-header-image {
  border-radius: 50%;
}

.xj-header-center {
  font-size: 32rpx;
  width: 400rpx;
}

.xj-header-time {
  font-size: 24rpx;
  color: #999;
}

.xj-header-right {
  display: flex;
  align-items: center;
}

.xj-header-right image {
  width: 60rpx;
  height: 60rpx;
}

.xj-header-right text {
  color: red;
}

/* 内容/ */

.xj-content {
  display: flex;
  font-size: 28rpx;
  justify-content: space-between;
  padding: 20rpx 60rpx;
  align-items: center;
}

.xj-right-view {
  font-size: 24rpx;
  color: #666;
}

/* 砍价 */

.xj-money-price {
  display: flex;
  flex-direction: column;
  width: 41%;
  border: 1rpx solid #ccc;
  padding: 20rpx;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: visible;
}

.xj-money {
  padding: 30rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
}

.xj-moeny-top {
  position: absolute;
  top: -25rpx;
  background: #fff;
  color: #fd5454;
  padding: 5rpx;
}

.xj-moeny-center {
  color: #fd5454;
  margin-top: 10rpx;
}

.xj-moeny-bottom {
  color: #959595;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.xj-btn-left {
  padding: 20rpx 100rpx;
  background: #f8c137;
  border-radius: 20rpx;
  color: white;
  font-size: 34rpx;
}

.xj-btn-right {
  padding: 20rpx 100rpx;
  background: #fd5454;
  border-radius: 20rpx;
  color: white;
  font-size: 34rpx;
}

/* 底部 */

.view-wine-nav-bg {
  background-color: #ddd;
  display: flex;
  justify-content: center;
  color: #000;
  font-size: 30rpx;
  margin-bottom:20rpx;
}

.view-wine-nav text {
  height: 80rpx;
  width: 25%;
  display: inline-block;
  text-align: center;
  line-height: 80rpx;
  box-sizing: border-box;
}

.view-wine-nav {
  background-color: #fff;
  width: 90%;
  height: 80rpx;
}

.hidden {
  display: none;
}

.blue {
  border-bottom: 2px solid #fd5454;
}

.w33 {
  width: 33.3%;
}

.xj-header-center1 {
  display: flex;
  align-items: center;
}

.xj-header-time1 {
  font-size: 24rpx;
  color: rgb(0,128,0);
}

.xj-header-image1 {
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
/* 二维码 */

.view-alleno {
  color: #f60;
  margin-top: 20rpx;
  font-size: 30rpx;
  position: relative;
  border:1rpx solid #ddd;
display:inline-block;
padding:10rpx;
border-radius:30rpx;
margin-left:20rpx;

}

.view-eno {
position:fixed;
display:flex;
top:0;
left:0;
z-index:1001;
flex-direction:column;
justify-content:center;
align-items:center;
height:100%;
width:100%;

}
.view-eno-bg {
  background: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
}
.image1{
width:600rpx;
height:600rpx;
position:absolute;
top:0;
}