/* pages/bargain/index/index.wxss */

page {
  background: #f3f3f3;
}

/* 搜索 */

.view-swiper image {
  width: 100%;
  height: 100%;
}

.view-input {
  background: #fff;
  border-radius: 10rpx;
  padding-left: 60rpx;
  font-size: 30rpx;
  height: 60rpx;
}

.view-input-image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 33rpx;
  left: 35rpx;
}

.headerimage {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(-180deg);
}

.xj-all-cate {
  top: 0;
  font-size: 30rpx;
  border-bottom: 1px solid #f5f5f5;
  padding: 15rpx 20rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
}

/* 底部tabbar */
@import "../foots.wxss";


/* 内容 */

.xj-bar-allcontent {
  background: #f9f9f9;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
}

.xj-bar-content {
  width:46%;
  padding: 10rpx;
  background: #fff;
  margin-bottom:20rpx;
}

.xj-bar-content-image {
  width: 100%;
  height: 340rpx;
}

.xj-bar-title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 70rpx;
  overflow: hidden;
  margin-top: 10rpx;
  color: #262626;
  text-overflow: ellipsis;
  font-size:26rpx;
}

.xj-bar-price {
  margin-top: 10rpx;
  color: #555;
  font-size: 24rpx;
}

.xj-bar-text {
  margin-top: 10rpx;
  color: #f55;
  font-size:32rpx;
}
