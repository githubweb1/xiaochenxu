/* pages/bargain/detail/index.wxss */
@import "/utils/wxParse/wxParse.wxss";
page {
  background: #f3f3f3;
}

/* 轮播图 */

.view-header-content {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 0 20rpx;
  line-height: 80rpx;
  font-size:30rpx;
  text-align: center;
}
.xj-absolate{
  background:#000;
opacity:0.5;
height:80rpx;
width:100%;
position:absolute;
bottom:0;
left:0;

}
.xj-time{
  z-index:1000;
display:flex;
align-items:center;
position:absolute;
bottom:0;
right:50rpx;
color: white
}
.view-header-content image {
  width: 50rpx;
  height: 50rpx;
}

.view-header-time {
  color: #000;
  margin-left: 10rpx;
  z-index:1000;
}

.swiper_box {
  position: relative;
  height: 750rpx;
}

.view-swiper {
  position: relative;
}

/* 价格 */

.xj-price {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
  background: #ff605d;
  color: white;
  font-size: 30rpx;
}

.xj-old-price {
  display: flex;
}

.xj-old-price>text {
  font-size: 40rpx;
}

.xj-price-join {
  padding: 5rpx 10rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 34rpx;
  font-size: 24rpx;
}

/* title */

.xj-bottom {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 15rpx;
  padding-bottom: 40rpx;
}

.xj-title {
  font-size: 30rpx;
  padding: 5rpx;
  display:flex;
flex-direction:column;
}

.xj-title-right {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #666;
  border-left: 1rpx solid #ccc;
  padding-left: 15rpx;
  justify-content:center;
}

.xj-title-right image {
  width: 50rpx;
  height: 50rpx;
}

/* 砍价流程 */

.xj-bargin {
  background: #fff;
  padding: 20rpx;
}

.xj-bargin-header {
  font-size: 30rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 0 15rpx;
}

.xj-bargin-header label {
  display: inline-block;
  width: 5rpx;
  height: 20rpx;
  background: red;
  margin-right: 10rpx;
}

.xj-bargin-center {
  padding:60rpx 0 0 0;
  display: flex;
  justify-content: space-between;
}

.xj-bargin-one {
  position: relative;
  width: 33.3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow:visible;
}

.xj-bargin-one text {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  background: red;
  color: white;
  border-radius: 50%;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  left: 50%;
  margin-left: -33rpx;
  top: -20rpx;
  font-size: 30rpx;
}

.xj-bargin-one view {
  font-size: 26rpx;
  padding: 20rpx;
  border: 1px dashed #fd5454;
  text-align: center;
  color: #fd5454;
  border-radius: 15rpx;
  width: 100%;
}

.xj-bargin-one image {
  width: 50rpx;
  height: 50rpx;
  transform: rotate(180deg);
}
.xj-phone-detail{
background:#fff;
border-bottom:2px solid #fd5454;
display:inline-block;
font-size:30rpx;
line-height:60rpx;
width:150rpx;
text-align:center;
}
/* 底部tabbar */

.view-tabbar {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  background: #fff;
  align-items: center;
  border-top:1rpx solid #f8f8f8;
}

.view-tabbar-content {
  width: 25%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.view-tabbar-image {
  width: 50rpx !important;
  height: 50rpx !important;
}

.view-tabbar-text {
  font-size: 25rpx;
  color: #999;
}
.xj-pricebuy{
font-size:30rpx;
padding:15rpx 20rpx;
border:1rpx solid #d54a47;
text-align:center;
border-radius:10rpx;
box-sizing: border-box;
color: #d54a47
}
.xj-bargainbuy{
padding:15rpx 20rpx ;
text-align:center;
background:#d54a47;
color:white;
font-size:30rpx;
border-radius:10rpx;
border:1rpx solid #d54a47;
}