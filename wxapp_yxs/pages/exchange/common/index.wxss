/* pages/exchange/index/index.wxss */

page {
  background-color: #f3f3f3;
}

.view-swiper image {
  width: 100%;
  height: 100%;
}

.xj-exchange-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 34rpx;
  margin-top: 30rpx;
}

.xj-header-color {
  font-size: 24rpx;
  color: #666;
}

.xj-input-exchange {
  padding: 15rpx 0;
  text-align: center !important;
  background: #fff;
  font-size: 30rpx;
  margin-top: 30rpx;
  width: 100%;
  border-radius: 10rpx;
}

.fastExchange {
  width: 80%;
  margin-top: 30rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 底部 */
.xj-bottom{
  margin-top: 40rpx;
  position:relative;
  font-size: 30rpx;
  margin-bottom:40rpx;
}
.line{
border-bottom:2rpx solid #ddd;
}
.yuan , .yuan1{
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #ccc;
  display: inline-block;
  margin-top:16rpx;
}
.yuan{
  float: left
}
.yuan1{
float: right
}
.xj-bottom-exchange{
  color: #666
}
.center{
position:absolute;
top:-20rpx;
background:#f3f3f3;
width:180rpx;
text-align:center;
left:50%;
margin-left:-90rpx;
}
/* 规则 */
.rule{
font-size:30rpx;
padding:0 40rpx;
color:#666;
}
/* 兑换商品 */
.xj-thing-center{
width:300rpx;
}

.xj-thing-center text{
color:#999;
}
.xj-thint-right{
padding:10rpx 30rpx;
background:#ff5555;
border-radius:20rpx;
color:white;
}
.xj-thing{
width:80%;
background:#fff;
margin-top:30rpx;
display:flex;
}
.xj-thing-image{
border-radius:50%;
}
.xj-thing1{
  padding:10px;
display:flex;
font-size:30rpx;
justify-content:space-between;
width:100%;
align-items:center;
}
.disabled{
  background: #ddd;
  color: white
}