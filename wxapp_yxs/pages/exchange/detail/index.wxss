  left: 0;
}

.view-order-bg-content {
  position: fixed;
  bottom: 0;
  z-index: 2000;
  /* height: 180rpx; */
  width: 100%;
  font-size: 27rpx;
  background: #fff;
}

.view-top {
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  position: relative;
  border-bottom: 1rpx solid #f3f3f3;
}

.view-left {
  position: absolute;
  top: -60rpx;
  padding: 7rpx;
  width: 150rpx;
  height: 150rpx;
  background: #fff;
  overflow: visible;
}

.view-left image {
  width: 100%;
  height: 100%;
}

.view-center {
  margin-left: 180rpx;
  font-size: 25rpx;
}

.view-center view {
}

.view-right {
  width: 50rpx;
  height: 50rpx;
}

.view-right image {
  width: 100%;
  height: 100%;
}

.view-bottom {
  padding: 40rpx 20rpx;
  background: #fff;
}

.view-color {
  border-top: 1rpx solid #ddd;
  height: 60rpx;
  line-height: 60rpx;
}

.view-bottom text {
  padding: 5rpx 15rpx;
  height: 40rpx;
  border-radius: 10rpx;
  background: #d8d8d8;
  display: inline-block;
  text-align: center;
  line-height: 40rpx;
  font-size: 23rpx;
  margin-right: 20rpx;
}

.xj-goddstitle {
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.view-bottom .choose {
  background: #f55;
  color: #f7f7f7;
}

