/* pages/exchange/detail/index.wxss */

page {
  background: #f3f3f3;
}

.view-swiper image {
  width: 100%;
  height: 100%;
}

.xj-detail-top {
  font-size: 30rpx;
  background: #fff;
  padding: 20rpx 0 20rpx 100rpx;
  color: #445;
  border: 1rpx solid #ccc;
  margin-bottom: 20rpx;
}

.red {
  color: #ff445f;
  margin-top: 10rpx;
}

/* 内容 */

.xj-detail-contentAll {
  background: #f8f8f8;
  padding: 20rpx;
  flex-wrap: wrap;
  display: flex;
}

.xj-detail-content {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  width: 33.3%;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.xj-detail-content image {
  width: 100%;
  height: 216rpx;
}

.detail-title {
  height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.xj-btn {
  width: 100%;
  color: #333;
  border: 1px solid #dfdfdf;
  padding: 10rpx 0;
  text-align: center;
  border-radius: 10rpx;
  background: #f7f7f7;
  font-size: 24rpx;
}

.xj-btng {
  background: #f55 !important;
  border: 1px solid #f55 !important;
  color: white !important;
}

.detail-center {
  padding: 20rpx 10rpx;
  font-size: 24rpx;
}

.bottom-choose, .bottom-buy {
  width: 48%;
  padding: 15rpx 0;
  color: white;
  text-align: center;
  border-radius: 15rpx;
  font-size: 30rpx;
  justify-content: center;
  border-top: 1rpx solid #ddd;
}

.bottom-choose {
  background: #ff8000;
  border: 1rpx solid #ff8000;
}

.bottom-buy {
  background: #f55;
  border: 1rpx solid #f55;
}

.detail-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

/* 查看已选 */

.xj-detail-choose {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background: #fff;
  font-size: 30rpx;
  color: #666;
}

.xj-choose-content {
  padding: 5rpx 20rpx;
}

.xj-choose-contentone {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f3f3f3;
  padding-bottom: 10rpx;
}

.xj-detailjj {
  width: 150rpx;
  height: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.xj-jian {
  width: 30%;
  border: 1rpx solid #ccc;
}

.xj-num, .xj-jia, .xj-jian {
  display: inline-block;
  height: 40rpx;
  text-align: center;
  box-sizing: border-box;
}

.xj-num {
  width: 40%;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

.xj-jia {
  width: 30%;
  border: 1rpx solid #ccc;
}

.xj-close {
  text-align:center;
background:#f55;
color:white;
border-radius:15rpx;
width:96%;
height:80rpx;
line-height:80rpx;
}
.xj-closebox{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}
scroll-view{
  height:100%;
}

/* 请选择规格及数量 */

.view-chooseNbm {
  font-size: 25rpx;
  height: 70rpx;
  margin-top: 30rpx;
  background: #fff;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.view-chooseNbm view {
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
}

.view-chooseNbm image {
  width: 30rpx;
  height: 30rpx;
  float: right;
  transform: rotate(180deg);
  margin-top: 20rpx;
}

.gq-item {
  height: auto;
  padding: 20rpx;
  position: relative;
  border-bottom: 1px solid #d9d9d9;
  background: #fff;
}

.gq-userinfo {
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}

.gq-comment {
  padding: 8rpx 0 5rpx 5rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  word-wrap: break-word;
}

.gq-comment-images {
  padding: 20rpx 0 0 0;
}

.gq-comment-images image {
  height: 80rpx;
  width: 80rpx;
  vertical-align: center;
  margin-right: 8rpx;
}

.gq-user {
  width: 100%;
  font-size: 28rpx;
  color: #555;
}

.gq-user image {
  height: 44rpx;
  width: 44rpx;
  border-radius: 50%;
  vertical-align: top;
}

.gq-data {
  font-size: 24rpx;
  color: #888;
}

.gq-user-title {
  padding: 0 10rpx;
}

.gq-feel {
  width: 200rpx;
  font-size: 28rpx;
  text-align: right;
  color: #ef4f4f;
}

.shine {
  margin-right: 4rpx;
}

.comment-reply {
  margin-top: 0.2rem;
  padding: 0.2rem;
  background: #f2f2f2;
  border-radius: 0.1rem;
  font-size: 0.65rem;
  line-height: 0.8rem;
  color: #777;
}

/* 确认规格 */

.view-order-bg {
  background: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  z-index: 1000;
