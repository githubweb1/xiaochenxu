page{
  background: #f8f8f8
}
/* 头部 */
.view-recore-header{
height:60rpx;
background:#fff;
padding: 20rpx;
display:flex;
align-items:center;
font-size:30rpx;
}
.view-recore-header image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-bottom:2rpx;
}
.view-recore-integral{
}
/* 内容 */
.view-recore-content{
background:#fff;
padding: 20rpx;
border-bottom:1px solid #f5f5f5;
display:flex;
font-size:25rpx;
align-items:center;
position: relative;
justify-content:space-between;
}
.view-recore-content-bg{
position:absolute;
width:100rpx;
height:30rpx;
background:orange;
color:white;
text-align:center;
line-height:30rpx;
top:100rpx;
opacity:0.9;
}


.view-recore-center{
width:400rpx;
}

.view-recore-right{
display:flex;
flex-direction:column;
}
.view-recore-right text{
color:#999;
}
.view-recore-right label{
  color: #666
}
.red{
  background: red
}
/* 底部tabbar */
.view-tabbar{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  background: #fff;
}
.view-tabbar-content{
  width: 33.3%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
}
.view-tabbar-image{
  width: 50rpx !important;
  height: 50rpx !important;
}
.view-tabbar-text{
    font-size: 25rpx;
    color: #999
  }
.view-wine-wait{
  margin-bottom:80rpx; 
}
.view-wine-go{
  margin-bottom:80rpx; 
}
.view-wine-leave{
  margin-bottom:80rpx; 
}


