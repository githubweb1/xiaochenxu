/* pages/IntegralMall/my/my.wxss */
@import "../foots.wxss";

page {
  background: #f8f8f8;
}

/* 内容 */

.view-wine-nav-bg {
  background-color: #ddd;
  display: flex;
  justify-content: center;
  color: #000;
  font-size: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.view-wine-nav text {
  height: 100rpx;
  width: 33.33%;
  display: inline-block;
  text-align: center;
  line-height: 100rpx;
  box-sizing: border-box;
}

.view-wine-nav {
  background-color: #fff;
  width: 100%;
  height: 100rpx;
}

.hidden {
  display: none;
}

.blue {
  border-bottom: 3px solid orange;
}

/* 内容 */

.view-allRecord {
  margin-bottom: 20rpx;
}

.view-allRecord-header {
  font-size: 28rpx;
  border-bottom: 1px solid #f5f5f5;
  height: 70rpx;
  line-height: 60rpx;
  padding-left: 15rpx;
}

.view-allRecord-header label {
  float: right;
  margin-right: 30rpx;
  font-size: 25rpx;
  color: orange;
}

.view-allRecord-content {
  padding: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.view-allRecord-image {
  width: 150rpx;
  height: 150rpx;
}

.view-allRecord-center {
  margin-top: 10rpx;
  width: 350rpx;
 
}
.view-allRecord-center1 {
  margin-top: 10rpx;
  width: 400rpx;
  display: flex;
  align-items: center;
}
.view-allRecord-center1 text {
  color: #999;
  display: inline-block;
  text-align: center;
  font-size: 26rpx;
}
.view-allRecord-center text {
  background: #1c94c8;
  color: white;
  display: inline-block;
  text-align: center;
  font-size: 25rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 10rpx;
}

.view-allRecord-right {
  color: red;
}

/* 底部tabbar */

.view-xiaoxi {
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-items: center;
  margin-top: 100rpx;
}

/* 内容底部 */

.view-allRecord-bottom {
  position: relative;
  padding: 0.2rem 0.4rem;
  height: 80rpx;
}

.view-bottom-inner {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  align-items:center;
}

.view-bottom-inner text {
  font-size: 30rpx;
}

.view-order-finish {
  font-size: 30rpx;
  border: 1px solid #666;
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
 
}

.view-order-hongbao {
  font-size: 30rpx;
  border: 1px solid #666;
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-top: 20rpx;
   position: absolute;
  right: 20rpx;
  border-radius:15rpx;
padding:2rpx 20rpx;
background:#f3f3f3;

}

.view-order-commond {
  font-size: 30rpx;
  border: 1px solid #666;
  width: 140rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-top: 20rpx;
  position: absolute;
  right: 20rpx;
}

/* 二维码 */

.view-alleno {
  color: #f60;
  font-size: 30rpx;
  position: relative;
  border: 1rpx solid #ddd;
  display: inline-block;
  padding: 10rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.view-eno {
  position: fixed;
  display: flex;
  top: 20%;
  left: 18%;
  z-index: 1001;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.view-eno-bg {
  background: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
}
