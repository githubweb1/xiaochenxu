/* pages/IntegralMall/allShop/allShop.wxss */
@import "../foots.wxss";
page{
  background: #f8f8f8
}
.headerimage{
  width:40rpx;
  height:40rpx;
  transform: rotate(-90deg)
}
.view-input{
  background: #fff;
  margin: 30rpx;
  margin-top: 0;
  border-radius: 10rpx;
  padding-left: 60rpx;
  font-size: 30rpx;
  height: 60rpx;
  margin-bottom:0;
}
.view-input-image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 97rpx;
  left: 35rpx;
}
/* 商品展示 */

.view-exchange {
  padding: 20rpx;
}

.view-exchange-header {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

.view-exchange-header::before {
  content: ">";
}

.view-exchange-allContent {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  flex-wrap: wrap
}

.view-exchange-content {
  width: 48%;
  font-size: 30rpx;
  margin-bottom: 30rpx;
  background:#fff;
  padding-bottom:20rpx;

}

.view-exchange-image {
  width: 100%;
  height: 250rpx;
}

.view-exchange-text {
  height: 60rpx;
  line-height: 60rpx;
  padding-left:20rpx;
font-size:28rpx;
overflow:hidden;

}

.view-exchange-content label {
  float: right;
  background: red;
  width: 70rpx;
  height: 40rpx;
  display: inline-block;
  text-align: center;
  font-size: 25rpx;
  color: white;
  border-radius: 10rpx;
  line-height: 40rpx;
  margin-right:20rpx;
}
.view-footer-integral {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 20rpx;
  color: #999;
  padding-left:20rpx;

}

.red {
  color: red;
  font-size: 30rpx;
}
.view-exchange-text-shop{
  height:40rpx;
  background: red;
  border-radius: 10rpx;
  display: inline-block;
  color: white;
  line-height: 40rpx;
  font-size: 25rpx;
  text-align: center;
  margin-right: 30rpx;
  padding:0 10rpx;
}
/* 底部tabbar */



.view-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:20rpx;
  padding:0 10rpx;
}

.view-footer-integral {
  font-size: 24rpx;
  color: #999;
  margin-bottom:10rpx;
}
.view-footer-integral1{
  display: flex;
  align-items:center;
  font-size:26rpx;
}
.red {
  color: red;
  font-size: 30rpx;
}
.view-exchange-text {
  height: 60rpx;
  line-height: 60rpx;
  overflow:hidden;
  margin-bottom:20rpx;
}